<p id="notice"><%= notice %></p>

<h1>Upcoming Bookings</h1>

<table class="table">
  <thead>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
      <th>Mobile</th>
      <th>Booking Day</th>
      <th>Booking Time</th>
      <th>Created At</th>
      <th>Updated At</th>
    </tr>
  </thead>

  <tbody>
    <% @bookings.each do |booking| %>
      <% if booking.bookingTime.future? %>
        <tr>
          <td><%= booking.client.firstName %></td>
          <td><%= booking.client.lastName %></td>
          <td><%= booking.client.email %></td>
          <td><%= booking.client.mobile %></td>
          <td><%= booking.bookingTime.strftime("%a #{booking.bookingTime.day.ordinalize}") %></td>
          <td><%= booking.bookingTime.strftime("%l:%M %p") %></td>
          <td><%= booking.created_at.strftime("%I:%M %p") %></td>
          <td><%= booking.updated_at.strftime("%I:%M %p") %></td>
          <td><%#= @client.booking.client_id.firstName %></td>


        </tr>
      <% end %>
      <% end %>
  </tbody>
</table>

<h1>Past Bookings</h1>

<table class="table">
  <thead>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
      <th>Mobile</th>
      <th>Booking Day</th>
      <th>Booking Time</th>
      <th>Testimonial Sent?</th>
      <!-- <th>Updated At</th> -->
    </tr>
  </thead>

  <tbody>
    <% @bookings.each do |booking| %>
      <% if booking.bookingTime.past? %>
        <tr>
          <td><%= booking.client.firstName %></td>
          <td><%= booking.client.lastName %></td>
          <td><%= booking.client.email %></td>
          <td><%= booking.client.mobile %></td>
          <td><%= booking.bookingTime.strftime("%a #{booking.bookingTime.day.ordinalize} %b %y") %></td>
          <td><%= booking.bookingTime.strftime("%l:%M %p") %></td>
          <!-- <td><%#= @client.booking.client_id.firstName %></td> -->
          <td><%= booking.client.testimonialSent %></td>


        </tr>
      <% end %>
      <% end %>
  </tbody>
</table>
<br>
<%#= link_to 'New Booking', new_booking_path %>
