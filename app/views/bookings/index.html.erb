<p id="notice"><%= notice %></p>

<h1>Upcoming Bookings</h1>

<table class="table">
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bookings.each do |booking| %>
      <% if booking.bookingTime.future? %>
        <tr>
          <td><%= booking.client.firstName %></td>
          <td><%= booking.client.lastName %></td>
          <td><%= booking.client.email %></td>
          <td><%= booking.client.mobile %></td>
          <td><%= booking.bookingTime.strftime("%A") %></td>
          <td><%= booking.bookingTime.strftime("%I:%M %p") %></td>
          <td><%#= @client.booking.client_id.firstName %></td>


        </tr>
      <% end %>
      <% end %>
  </tbody>
</table>

<h1>Past Bookings</h1>

<table class="table">
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bookings.each do |booking| %>
      <% if booking.bookingTime.past? %>
        <tr>
          <td><%= booking.client.firstName %></td>
          <td><%= booking.client.lastName %></td>
          <td><%= booking.client.email %></td>
          <td><%= booking.client.mobile %></td>
          <td><%= booking.bookingTime.strftime("%A") %></td>
          <td><%= booking.bookingTime.strftime("%I:%M %p") %></td>
          <td><%#= @client.booking.client_id.firstName %></td>


        </tr>
      <% end %>
      <% end %>
  </tbody>
</table>
<br>
